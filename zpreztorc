
echo "#### zpreztorc"
####my confs
FLAG_COMMON=true
FLAG_PREZTO=true
IS_CYGWIN=""
FLAG_PYTHON=""
PREZTO_THEME=""

unameOut="$(uname -s)"
IS_CYGWIN=""
IS_LINUX=""
case "${unameOut}" in
	CYGWIN*) IS_CYGWIN=true;;
	Linux*) IS_LINUX=true;;
	FreeBSD*) IS_LINUX=true;;
	*) echo "##this is neither Cygwin nor Linux. exit 1" && exit 1;;
esac
if [ -e /home/mobaxterm ]; then
	IS_MOBAXTERM=true
	IS_CYGWIN=""
fi

case $HOST in
  PC | workingtower) echo "##PC or workingtower setup"
		if [ $IS_CYGWIN ];then
			echo "##this is Cygwin"
			IS_CYGWIN=true
		elif [ $IS_LINUX ];then
			echo "##this is Linux"
			FLAG_LINUX=true
		fi
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		FLAG_HIGHSPEC=true
		#PREZTO_THEME="powerline"
		#PREZTO_THEME="adam2"
		PREZTO_THEME="fade"
		#PREZTO_THEME="sorin"
		;;
	backuptower*) echo "##backuptower setup"
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		FLAG_HIGHSPEC=true
		#PREZTO_THEME="powerline"
		#PRETO_THEME="adam2"
		PREZTO_THEME="fade"
		;;
	ubuntumain*) echo "ubuntumain setup"
		PREZTO_THEME="fade"
		;;
	ubuntusetuptest*) echo "##ubuntusetuptest"
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		#PREZTO_THEME="steeef"
		PREZTO_THEME="pure"
		;;
	ubuntu-erico*) echo "##ubuntu-erico setup"
		FLAG_PREZTO=true
		PREZTO_THEME="pure"
		;;
	www2271.sakura.ne.jp*) echo "##sakura setup"
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		#PREZTO_THEME=powerline
		#PRETO_THEME="adam2"
		PREZTO_THEME="fade"
		;;
	*msi*) echo "##msi setup"
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		FLAG_HIGHSPEC=""
		PREZTO_THEME="fade"
		;;
	*-SW*) echo "###-SW setup"
		FLAG_COMMON=""
		FLAG_PREZTO=true
		FLAG_PYTHON=""
		FLAG_HIGHSPEC=true
		PREZTO_THEME="fade"
		;;
	libra* | aries*) echo "##libra | aries setup"
		FLAG_PREZTO=true
		FLAG_PYTHON=true
		FLAG_HIGHSPEC=ture
		PREZTO_THEME="fade"
		;;
	*) echo "##not registerd host. apply COMMON settings"
		FLAG_COMMON=true
		PREZTO_THEME="pure"
		;;
esac


echo "####conf my .zpreztorc"
if [ $IS_CYGWIN ]; then
	echo "##conf cygwin"
	chmod +rwx $HOME/.zprezto
fi

if [ $FLAG_HIGHSPEC ]; then
	echo "##conf HIGHSPEC"
	if [ ! $PREZTO_THEME ]; then
		([ $FLAG_PYTHON ] && PREZTO_THEME="powerline") || PREZTO_THEME="sorin"
	fi
fi

if [ $PREZTO_THEME ]; then
	echo "set theme $PREZTO_THEME"
	zstyle ':prezto:module:prompt' theme "$PREZTO_THEME"
else
	echo "no theme specificated. set theme pure"
	zstyle ':prezto:module:prompt' theme "pure"
fi

if [ $FLAG_COMMON ]; then
	echo "##conf common"
	#zstyle ':prezto:module:terminal' auto-title 'yes'
	zstyle ':prezto:module:terminal' auto-title 'always'
	zstyle ':prezto:module:terminal:window-title' format '%n@%m: %s'
	zstyle ':prezto:module:terminal:tab-title' format '%m: %s'
	zstyle ':prezto:module:terminal:multiplexer-title' format '%s'
fi

: <<'#__CO__'
if [ $ ]; then
	echo "##"
fi
#__CO__


